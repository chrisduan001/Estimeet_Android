<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/contact_book"
            android:contentDescription="@null"/>

        <estimeet.meetup.util.widget.OmnesTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:text="@string/permission_page_contact_book"
            app:typeface="medium"/>

        <estimeet.meetup.util.widget.OmnesTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/greyDarker"
            android:text="@string/permission_page_text_top"
            app:typeface="regular" />

        <estimeet.meetup.util.widget.OmnesTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/greyDarker"
            android:text="@string/permission_page_text_bot"
            app:typeface="regular"/>

        <estimeet.meetup.util.widget.OmnesButton
            android:id="@+id/btn_grant_permission"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_button"
            android:text="@string/permission_page_button"
            android:textColor="@color/white"
            app:typeface="medium"/>

        <estimeet.meetup.util.widget.OmnesTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/permission_page_addon"
            android:textColor="@color/grey"/>
    </LinearLayout>

    <include layout="@layout/merge_progress_bar" />
</FrameLayout>