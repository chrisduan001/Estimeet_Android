<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/add_friend_icon"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_marginLeft="20dp"
            />

        <estimeet.meetup.util.widget.OmnesTextView
            android:id="@+id/add_friend_label"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/add_friend_icon"
            android:textColor="@color/greyDarker"
            app:typeface="medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            tools:text="@string/search_phone"
            android:visibility="visible"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/add_friend_label"
            tools:listitem="@layout/item_manage_friends_list"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/searchResult_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            tools:listitem="@layout/item_manage_friends_list"/>

        <include layout="@layout/merge_progress_bar" />

    </RelativeLayout>


</FrameLayout>